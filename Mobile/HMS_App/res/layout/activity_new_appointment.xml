<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E8E8E8"
    tools:context="com.example.hms_app.NewAppointmentActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/textview_appointment_date"
        android:text="*Appointment Date:" />
    
    <EditText 
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/textview_appointment_date"
        android:id="@+id/edittext_appointment_date"
        android:background="@+drawable/edittextshape"
        android:focusableInTouchMode="false"
        android:paddingLeft="5dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/edittext_appointment_date"
        android:id="@+id/textview_appointment_time"
        android:text="*Appointment Time:" />
    
    <EditText 
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/textview_appointment_time"
        android:id="@+id/edittext_appointment_time"
        android:focusableInTouchMode="false"
        android:background="@+drawable/edittextshape"
        android:paddingLeft="5dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/edittext_appointment_time"
        android:id="@+id/textview_department"
        android:text="*Doctor Department:" />
    
    <Spinner 
	    android:id="@+id/spinner_department"
        android:layout_below="@id/textview_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/spinner_department"
        android:id="@+id/textview_doctor"
        android:text="*Doctor:" />
    
    <Spinner 
	    android:id="@+id/spinner_doctor"
        android:layout_below="@id/textview_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/spinner_doctor"
        android:id="@+id/textview_body_part"
        android:text="*Problem In Body Part:" />
    
	<Spinner 
	    android:id="@+id/spinner_body_part"
        android:layout_below="@id/textview_body_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/spinner_body_part"
        android:id="@+id/textview_problem_details"
        android:text="Problem Details:" />
    
	<EditText 
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/textview_problem_details"
        android:id="@+id/edittext_problem_details"
        android:gravity="top|left"
        android:background="@+drawable/edittextshape"
        android:paddingLeft="5dp"/>
	
	<Button 
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Schedule Appointment"
	    android:layout_marginTop="10dp"
	    android:textColor="#00BFFF"
	    android:onClick="button1_onClick"
	    android:layout_below="@id/edittext_problem_details"
	    android:background="@+drawable/button_color"/>
    
</RelativeLayout>
