<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hms_app.PreviousAppointmentDetailsActivity" >

    <TableRow android:background="#FFFFFF" >

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Appointment Token:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/textview1"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:background="#FFFFFF" >

        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview1"
            android:layout_marginTop="10dp"
            android:text="Doctor Name:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/textview3"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:background="#FFFFFF" >

        <TextView
            android:id="@+id/textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview3"
            android:layout_marginTop="10dp"
            android:text="Appointment Date:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/textview5"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:background="#FFFFFF" >

        <TextView
            android:id="@+id/textview7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview5"
            android:layout_marginTop="10dp"
            android:text="Appointment Time:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textview8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview6"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/textview7"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:background="#FFFFFF" >

        <TextView
            android:id="@+id/textview9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview7"
            android:layout_marginTop="10dp"
            android:text="Problem Body Part:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textview10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview8"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/textview9"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:background="#FFFFFF" >

        <TextView
            android:id="@+id/textview11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview9"
            android:layout_marginTop="10dp"
            android:text="Problem Details:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textview12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview10"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/textview11"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>
    <TableRow android:background="#FFFFFF" >

        <TextView
            android:id="@+id/textview13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview9"
            android:layout_marginTop="10dp"
            android:text="Diagnosis:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textview14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview13"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/textview13"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

    <Button
        android:id="@+id/button_view_medicines"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_color"
		android:textColor="#00BFFF"
        android:onClick="button_view_medicines_onClick"
        android:text="View Medicines" />
</TableLayout>