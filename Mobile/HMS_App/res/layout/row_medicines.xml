<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	 <ImageView 
        android:id="@+id/imageview_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/arrow"/>
    
	<TextView 
	    android:id="@+id/textview_medicine_name"
	    android:layout_height="wrap_content"
	    android:paddingLeft="3dp"
	    android:layout_toRightOf="@id/imageview_icon"
	    android:layout_width="wrap_content"
	    android:textSize="20sp"/>
	
	<TextView 
	    android:id="@+id/textview_medicine_type"
	    android:paddingLeft="10dp"
	    android:layout_below="@id/textview_medicine_name"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textSize="17sp"/>
	
	<TextView 
	    android:id="@+id/textview_medicine_strength"
	    android:paddingLeft="10dp"
	    android:layout_below="@id/textview_medicine_type"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textSize="17sp"/>
	
	<TextView 
	    android:id="@+id/textview_medicine_quantity"
	    android:paddingLeft="10dp"
	    android:layout_below="@id/textview_medicine_strength"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textSize="17sp"/>
	
	<TextView 
	    android:id="@+id/textview_medicine_number_of_refills"
	    android:paddingLeft="10dp"
	    android:layout_below="@id/textview_medicine_quantity"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textSize="17sp"/>
	
	<TextView 
	    android:id="@+id/textview_medicine_quantity_on_refills"
	    android:paddingLeft="10dp"
	    android:layout_below="@id/textview_medicine_number_of_refills"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textSize="17sp"/>
	
	<TextView 
	    android:id="@+id/textview_medicine_start_date"
	    android:paddingLeft="10dp"
	    android:layout_below="@id/textview_medicine_quantity_on_refills"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textSize="17sp"/>
	
	<TextView 
	    android:id="@+id/textview_medicine_instructions"
	    android:paddingLeft="10dp"
	    android:layout_below="@id/textview_medicine_start_date"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textSize="17sp"/>
	
</RelativeLayout>
