<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:id="@+id/imageview_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/arrow"/>
    
	<TextView 
	    android:id="@+id/textview_doctor_name"
	    android:layout_height="wrap_content"
	    android:paddingLeft="3dp"
	    android:layout_toRightOf="@id/imageview_icon"
	    android:layout_width="wrap_content"
	    android:textSize="18sp"/>
	
	<TextView 
	    android:id="@+id/textview_appointment_date"
	    android:paddingLeft="10dp"
	    android:layout_below="@id/textview_doctor_name"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textSize="18sp"/>
	
	<TextView 
	    android:id="@+id/textview_appointment_time"
	    android:paddingLeft="10dp"
	    android:layout_below="@id/textview_appointment_date"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textSize="18sp"/>
	
</RelativeLayout>
